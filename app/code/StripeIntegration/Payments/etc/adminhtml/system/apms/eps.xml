<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
  <group id="eps" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
    <label>EPS (Electronic Payment Standard)</label>
    <comment>EPS (Electronic Payment Standard) is a payment method made available through the Stripe payment gateway.</comment>
    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Enabled</label>
      <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
      <config_path>payment/stripe_payments_eps/active</config_path>
    </field>

    <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Title</label>
      <comment><![CDATA[This is the payment method title used at the checkout page]]></comment>
      <config_path>payment/stripe_payments_eps/title</config_path>
    </field>

    <field id="statement_descriptor" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Optional Statement Descriptor</label>
      <config_path>payment/stripe_payments_eps/statement_descriptor</config_path>
    </field>

    <field id="allowspecific" translate="label" type="allowspecific" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Payment From Applicable Countries</label>
      <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
      <config_path>payment/stripe_payments_eps/allowspecific</config_path>
    </field>

    <field id="specificcountry" translate="label" type="multiselect" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Payment From Specific Countries</label>
      <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
      <config_path>payment/stripe_payments_eps/specificcountry</config_path>
    </field>

    <field id="allowed_currencies" translate="label" type="select" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Currencies Applicable For</label>
      <source_model>StripeIntegration\Payments\Model\Adminhtml\Source\CurrenciesEU</source_model>
      <config_path>payment/stripe_payments_eps/allowed_currencies</config_path>
    </field>

    <field id="sort_order" translate="label" type="text" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Sort Order</label>
      <comment>Adjust this to move the payment method above or below other payment methods</comment>
      <frontend_class>validate-number</frontend_class>
      <config_path>payment/stripe_payments_eps/sort_order</config_path>
    </field>
  </group>
</include>
