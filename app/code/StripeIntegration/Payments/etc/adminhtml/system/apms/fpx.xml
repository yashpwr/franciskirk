<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
  <group id="fpx" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
    <label>FPX</label>
    <comment>FPX is a popular payment method in Malaysia made available through the Stripe payment gateway.</comment>
    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Enabled</label>
      <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
      <config_path>payment/stripe_payments_fpx/active</config_path>
    </field>

    <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Title</label>
      <comment><![CDATA[This is the payment method title used at the checkout page]]></comment>
      <config_path>payment/stripe_payments_fpx/title</config_path>
    </field>

    <field id="allowspecific" translate="label" type="allowspecific" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Payment From Applicable Countries</label>
      <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
      <config_path>payment/stripe_payments_fpx/allowspecific</config_path>
    </field>

    <field id="specificcountry" translate="label" type="multiselect" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Payment From Specific Countries</label>
      <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
      <config_path>payment/stripe_payments_fpx/specificcountry</config_path>
    </field>

    <field id="allowed_currencies" translate="label" type="multiselect" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Currencies Applicable For</label>
      <source_model>Magento\Config\Model\Config\Source\Locale\Currency</source_model>
      <depends>
        <field id="allow_currencies">1</field>
      </depends>
      <config_path>payment/stripe_payments_fpx/allowed_currencies</config_path>
    </field>

    <field id="sort_order" translate="label" type="text" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Sort Order</label>
      <comment>Adjust this to move the payment method above or below other payment methods</comment>
      <frontend_class>validate-number</frontend_class>
      <config_path>payment/stripe_payments_fpx/sort_order</config_path>
    </field>
  </group>
</include>
